<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 被选中或者获取焦点就用white_border,否则透明 -->
    <item android:state_focused="true" android:drawable="@drawable/white_border"/>
    <item android:state_selected="true" android:drawable="@drawable/white_border"/>
    <item android:drawable="@android:color/transparent"/>
    <!-- 默认透明 -->
</selector>

